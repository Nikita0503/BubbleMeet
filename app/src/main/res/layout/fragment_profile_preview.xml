<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewBubbles"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_height="310dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_background" />

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/imageBoom"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:big_shine_color="#FF6666"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#FF6666"
            app:click_animation_duration="200"
            app:enable_flashing="false"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBubbles"
            app:layout_constraintEnd_toEndOf="@+id/imageViewBubbles"
            app:layout_constraintStart_toStartOf="@+id/imageViewBubbles"
            app:layout_constraintTop_toTopOf="@+id/imageViewBubbles"
            app:shine_animation_duration="1500"
            app:shine_count="8"
            app:shine_distance_multiple="1.5"
            app:shine_turn_angle="10"
            app:small_shine_color="@color/colorGray"
            app:small_shine_offset_angle="20" />

    <com.github.abdularis.civ.CircleImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBubbles"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBubbles"
        app:layout_constraintStart_toStartOf="@+id/imageViewBubbles"
        app:layout_constraintTop_toTopOf="@+id/imageViewBubbles"
        app:srcCompat="@drawable/circle_for_photo_blue" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/name"
        android:textColor="@color/colorName"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBubbles" />

    <TextView
        android:id="@+id/textViewYearsOldAndCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Years old, City"
        android:textColor="@color/colorName"
        android:textSize="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <ImageView
        android:id="@+id/imageViewLike"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBubbles"
        app:srcCompat="@drawable/likes_button_profile" />

    <ImageView
        android:id="@+id/imageViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewName"
        app:srcCompat="@drawable/messeges_profile" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewYearsOldAndCity" />

    <ImageView
        android:id="@+id/imageViewBoom"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewLike"
        app:layout_constraintStart_toStartOf="@+id/imageViewLike"
        app:srcCompat="@drawable/likes_button_boom" />

    <ImageView
        android:id="@+id/imageViewBoomWhiteCircle"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_white" />

    <ImageView
        android:id="@+id/imageViewPinkDown1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:layout_constraintStart_toStartOf="@+id/imageViewPinkLeftDown"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewPinkDown2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewPinkLeftDown"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPinkDown1"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewPinkRightDown"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPinkDown2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewPinkLeftUp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewPinkRightUp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewPinkUp1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewPinkUp2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_pink" />

    <ImageView
        android:id="@+id/imageViewGrayDown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    <ImageView
        android:id="@+id/imageViewGrayLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    <ImageView
        android:id="@+id/imageViewGrayRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    <ImageView
        android:id="@+id/imageViewGrayUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    <ImageView
        android:id="@+id/imageViewGrayDownLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    <ImageView
        android:id="@+id/imageViewGrayDownRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/imageViewAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    <ImageView
        android:id="@+id/imageViewGrayUpLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    <ImageView
        android:id="@+id/imageViewGrayUpRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar"
        app:srcCompat="@drawable/circle_for_photo_gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>